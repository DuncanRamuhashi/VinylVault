{
  "installCommand": "npm install --legacy-peer-deps",
  "version": 2,
  "builds": [
    {
      "src": "./src/app.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "(.*)",
      "dest": "./src/app.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}